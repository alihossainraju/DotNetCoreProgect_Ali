@model DotNetCoreProgect_Ali.Models.Food

@{ ViewData["Title"] = "Details"; }

<div class="card">
    <div class="card-header">
        <h3 class="text-uppercase">Food Details</h3>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.FoodName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FoodName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Quality)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Quality)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Quantity)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Quantity)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.PurchasesDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PurchasesDate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.PurchasesTime)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PurchasesTime)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Place)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Place)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Image)
            </dt>
            <dd class="col-sm-10">
                <img src="~/Uploads/@Model.Image" class="img-thumbnail" height="100" width="100" asp-append-version="true" />
            </dd>
        </dl>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-info rounded-0"><i class="fa fa-pencil-alt"></i> Edit</a>
            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-sm btn-danger rounded-0"><i class="fa fa-trash-alt"></i> Delete</a>
            <a asp-action="Index" class="btn btn-sm btn-primary rounded-0"><i class="fas fa-fast-backward"></i> Back to List</a>
        </div>
    </div>
</div>

